<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit-1.7.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">


	<!-- 1.定义rabbit连接工厂 -->
	<rabbit:connection-factory id="connectionFactory"
		host="192.168.48.129" port="5672" username="wei" password="123456"
		virtual-host="/wei" />

	<!-- 2.定义MQ的管理，包括队列，交换机 -->
	<rabbit:admin connection-factory="connectionFactory" />

	<!-- 3.定义队列，自动声明,并且持久化 -->
	<rabbit:queue name="detail_queue" auto-declare="true" durable="true" />

	<!-- 4.定义交换机，将队列绑定到交换机上 -->
	<rabbit:fanout-exchange name="fanoutExchange"
		auto-declare="true">
		<rabbit:bindings>
			<rabbit:binding queue="detail_queue" />
		</rabbit:bindings>
	</rabbit:fanout-exchange>

	<!-- 6.定义一个Handler，负责处理监听到的消息 -->
	<bean id="listenerHandler" class="com.b2c.detail.handler.ListenerHandler" />

	<!-- 7.监听队列 -->
	<rabbit:listener-container
		connection-factory="connectionFactory">
		<rabbit:listener ref="listenerHandler" method="listen"
			queue-names="detail_queue" />
	</rabbit:listener-container>

</beans>

